{
  "nodeModulesDir": "auto",
  "tasks": {
    "check": "deno fmt --check . && deno lint . && deno check",
    "dev": "vite",
    "build": "vite build",
    "start": "deno serve -A _fresh/server.js",
    "update": "deno run -A -r jsr:@fresh/update .",
    "preview": "deno serve -A _fresh/server.js",
    "deploy": "deno run build && wrangler deploy"
  },
  "lint": { "rules": { "tags": ["fresh", "recommended"] } },
  "exclude": ["**/_fresh/*", ".zed", ".git"],
  "imports": {
    "@cloudflare/vite-plugin": "npm:@cloudflare/vite-plugin@^1.14.0",
    "@vtbag/turn-signal": "npm:@vtbag/turn-signal@^1.3.1",
    "class-variance-authority": "npm:class-variance-authority@^0.7.1",
    "clsx": "npm:clsx@^2.1.1",
    "fresh": "jsr:@fresh/core@^2.1.4",
    "preact": "npm:preact@^10.27.2",
    "@preact/signals": "npm:@preact/signals@^2.3.2",
    "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.7",
    "tailwind-merge": "npm:tailwind-merge@^3.3.1",
    "vite": "npm:vite@^7.1.12",
    "tailwindcss": "npm:tailwindcss@^4.1.16",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.16",
    "wrangler": "npm:wrangler@^4.46.0"
  },
  "compilerOptions": {
    "lib": ["dom", "dom.asynciterable", "dom.iterable", "deno.ns"],
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "jsxPrecompileSkipElements": [
      "a",
      "img",
      "source",
      "body",
      "html",
      "head",
      "title",
      "meta",
      "script",
      "link",
      "style",
      "base",
      "noscript",
      "template"
    ]
  }
}
